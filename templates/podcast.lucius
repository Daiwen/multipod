.current-episode {
  border-radius: 5px;
  background-color: thistle;
}

.selected-episode {
  border-color: silver;
}

.non-selected-episode {
  border-color: white;
}

.episode {
  margin: 2px;
  cursor: pointer;
  border-radius: 5px;
  border-style: solid;
  border-width: thin;
}

.episode:hover {
  border-radius: 5px;
  background-color: silver;
  border-color: silver;
}
